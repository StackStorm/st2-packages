#!/bin/sh
#
### BEGIN INIT INFO
# Provides: st2api
# Required-Start: $local_fs $network $named $remote_fs $syslog
# Required-Stop: $local_fs $network $named $remote_fs $syslog
# Short-Description: st2api component
# Description: St2Api - StackStorm service st2api
### END INIT INFO

# st2api     This shell script takes care of starting and stopping
#             st2api daemon.
# chkconfig: - 85 15
# description: St2Api - StackStorm service st2api
# processname: st2api

# Source function library.
. /etc/rc.d/init.d/functions

# Source networking configuration.
. /etc/sysconfig/network

# Source our sysv functions
. /opt/stackstorm/st2/share/sysvinit/functions

DESC="st2api"
NAME=st2api
DAEMON=/opt/stackstorm/st2/bin/gunicorn_pecan
DAEMON_ARGS="-k sync -b 127.0.0.1:9101 --workers 1 --threads 1 --graceful-timeout 10 --timeout 30"
PIDFILE=/var/run/$NAME.pid
RUNAS_USER="st2"

lockfile=/var/lock/subsys/$NAME

# Exit if the package is not installed
[ -x "$DAEMON" ] || exit 5

# Read configuration variable file if it is present
[ -r /etc/sysconfig/$NAME ] && . /etc/sysconfig/$NAME
DAEMON_ARGS="/opt/stackstorm/st2/lib/python2.7/site-packages/st2api/gunicorn_config.py ${DAEMON_ARGS}"


start() {
    echo -n $"Starting $NAME: "
    daemon --background --check=${NAME} --user=${RUNAS_USER} \
        $DAEMON $DAEMON_ARGS
    save_chkprocesspid --masterpid --scriptname=${NAME} ${DAEMON}
    retval=$?
    echo
    [ $retval -eq 0 ] && touch $lockfile || return $retval
}

stop() {
    echo -n $"Stopping $NAME: "
    killproc -p $PIDFILE $DAEMON
    retval=$?
    echo
    [ $retval -eq 0 ] && rm -f $lockfile || return $retval
}

restart() {
    stop
    start
}

reload() {
    restart
}

force_reload() {
    restart
}

rh_status() {
    # run checks to determine if the service is running or use generic status
    status $NAME
}

rh_status_q() {
    rh_status >/dev/null 2>&1
}


case "$1" in
    start)
        rh_status_q && exit 0
        $1
        ;;
    stop)
        rh_status_q || exit 0
        $1
        ;;
    restart)
        $1
        ;;
    reload)
        rh_status_q || exit 7
        $1
        ;;
    force-reload)
        force_reload
        ;;
    status)
        rh_status
        ;;
    condrestart|try-restart)
        rh_status_q || exit 0
        restart
        ;;
    *)
        echo $"Usage: $0 {start|stop|status|restart|condrestart|try-restart|reload|force-reload}"
        exit 2
esac
exit $?
